# 复制此文件为 .env 并填写真实值

# MongoDB 连接
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=petool

# JWT 密钥（生产环境请用随机长字符串）
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080  # 7天

# 上游 AI API Key（用户不可见，服务器持有）
GLM_API_KEY=your-zhipu-api-key
GLM_API_BASE=https://open.bigmodel.cn/api/paas/v4

ARK_API_KEY=your-ark-api-key
ARK_API_BASE=https://ark.cn-beijing.volces.com/api/v3

MINIMAX_API_KEY=your-minimax-api-key
MINIMAX_GROUP_ID=your-minimax-group-id
MINIMAX_API_BASE=https://api.minimax.chat/v1

OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1

# 微信支付配置
WECHAT_PAY_MCHID=your-mchid
WECHAT_PAY_APPID=your-appid
WECHAT_PAY_API_V3_KEY=your-api-v3-key
WECHAT_PAY_PRIVATE_KEY_PATH=./certs/wechat_apiclient_key.pem
WECHAT_PAY_CERT_SERIAL_NO=your-cert-serial-no
WECHAT_PAY_NOTIFY_URL=https://your-domain.com/payment/wechat/notify

# 支付宝配置
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY_PATH=./certs/alipay_private_key.pem
ALIPAY_PUBLIC_KEY_PATH=./certs/alipay_public_key.pem
ALIPAY_NOTIFY_URL=https://your-domain.com/payment/alipay/notify
ALIPAY_RETURN_URL=https://your-domain.com/payment/success
ALIPAY_SANDBOX=true  # 开发阶段用沙箱，生产改为 false
