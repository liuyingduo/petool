{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PETool",
  "version": "0.1.0",
  "identifier": "com.petool.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build && npm run browser:prepare",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PETool - AI Agent",
        "width": 1040,
        "height": 680,
        "center": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 820,
        "minHeight": 520
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/browser-node"
    ],
    "resources": [
      "resources/browser-sidecar"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
